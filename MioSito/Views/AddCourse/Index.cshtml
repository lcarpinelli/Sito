
@{
    ViewData["Title"] = "Index";
}

@using MioSito.Models.ViewModels 
@using MioSito.Models.Enums

@model AddCourseViewModel

<h1>Aggiungi Corso</h1>

<form asp-controller="AddCourse" asp-action="Save" enctype="multipart/form-data" method="post">
    <div class="form-row">
        <div class="form-group col-md-5">
            <label>Titolo</label>
            <input type="text" class="form-control" placeholder="Inserisci Titolo" name="Title">
            <span asp-validation-for="Title" />
        </div>
        <div class="form-group col-md-5">
                <label>Autore</label>
                <input required type="text" class="form-control" placeholder="Inserisci Autore" name="Author">
            </div>
            <div class="form-group col-md-2">
                <label>Rating</label>
                <input required type="text" class="form-control" placeholder="Inserisci da 1 a 5" name="Rating">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label>Prezzo Pieno</label>
                <input required type="text" class="form-control" placeholder="Inserisci Prezzo Pieno" name="FullPrice">
            </div>
            <div class="form-group col-md-4">
                <label>valuta</label>
                <select class="form-control"  name="valutafullprice">
                        <option>@Currency.EUR</option>
                        <option>@Currency.USD</option>
                        <option>@Currency.GBP</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label>Prezzo Scontato</label>
                <input required type="text" class="form-control" placeholder="Inserisci Prezzo Scontato" name="CurrentPrice">
            </div>
            <div class="form-group col-md-4">
                <label>Valuta</label>
                <select class="form-control" name="ValutaCurrentPrice">
                        <option>@Currency.EUR</option>
                        <option>@Currency.GBP</option>
                        <option>@Currency.USD</option>
                </select>
            </div>
             <div asp-validation-summary="All"></div>
        </div>
        <button type="submit" class="btn btn-primary">Invia al database</button>
       
</form >