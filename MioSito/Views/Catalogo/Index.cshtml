
@{
    ViewData["Title"] = "Catalogo";
}

@using MioSito.Models.ViewModels

@model List<CatalogoViewModel>

<h1>Catalogo corsi</h1>
<br />

        @foreach (CatalogoViewModel x in Model)
        {

            <div class="row md-3 divMax">
                <div class="col-md-3 divImg"><img src="@x.ImagePath" class="immagine" height="100" /> </div>
                <div class="col-md-3">@x.Title</div>
                <div class="col-md-3">@x.CurrentPrice</div>
                <div class="col-md-3">
                    <a class="btn btn-outline-primary"
                       asp-controller="Catalogo"
                       asp-action="Cata"
                       asp-route-id="@x.Id">Dettagli</a>
                </div>

            </div>
        }

